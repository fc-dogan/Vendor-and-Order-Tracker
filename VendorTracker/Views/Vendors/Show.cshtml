@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h2>All Orders in this Vendor:</h2>

<ol>
  @foreach(Order order in @Model["orders"])
  {
    <li> <strong>@order.Title</strong>
      <ul>
        <li><strong>Description: </strong> @order.Description</li>
        <li><strong>Price: </strong> @order.Price</li>
        <li><strong>Date: </strong> @order.Date</li>
      </ul>
    </li>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new Order</a></p>
<p><a href='/vendors'>Return to Vendors list</a></p>
<p><a href='/'>Return to Main Page</a></p>